@model IEnumerable<WebDemo.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0; 
}

<h2>Index</h2>

<p>
    @Html.ActionLink("createCate", "createCate")
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
           Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(i+1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Label)
        </td>
        <td>
            @Html.ActionLink("Edit", "editCate", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "deleteCate", new { id = item.Id })
        </td>
    </tr>
    i++;
}

</table>
