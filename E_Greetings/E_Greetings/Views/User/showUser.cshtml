@using PagedList;
@using PagedList.Mvc;
@model IPagedList<E_Greetings.Models.ModelsView.UserModelView>

@{
    ViewBag.Title = "showUser";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    int i = 1;
}

<table class="table">
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.First().Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().isSubcrise)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(i++)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isSubcrise)
        </td>
        <td>
            @Html.ActionLink("Edit", "updateUser", new { id=item.ID }) |
            @Html.ActionLink("Delete", "deleteUser", new { id=item.ID })
        </td>
    </tr>
}
</table>
<div style="clear:both"></div>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="Menutrang">
@Html.PagedListPager(Model, page => Url.Action("showUser", new { name = ViewBag.Keyword, page = page}))
</div>
<style>
    .Menutrang li {
        display:inline;
        margin-right:10px;
    }
</style>