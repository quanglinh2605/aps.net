@model E_Greetings.Models.ModelsView.TemplateModelView

@{
    ViewBag.Title = "createTemp";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    List<E_Greetings.Models.ModelsView.CategoryView> lsCate = ViewBag.lsCate as List<E_Greetings.Models.ModelsView.CategoryView>;
}

<h2>createTemp</h2>

@using (Html.BeginForm("createTemp","Template", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TemplateModelView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label for="IDCategory" class="control-label col-md-2">Occasions</label>
           <div class="col-md-10">
            <select name="IDCategory">
               <option value="-1">Select Occasion</option>
               @foreach(var item in lsCate)
               {
                   <option value="@item.ID">@item.Occasions</option>
               }
           </select>
               </div>
        </div>
        <div class="form-group">
            <label for="ImageFile" class="control-label col-md-2">Upload Template</label>
            <div class="col-md-10">
                <input type="file" value="" name="ImageFile" />
            </div>  
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="text" style="width:400px;" name="Title" value="" />
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descriptions, htmlAttributes: new { @class = "form-control col-md-10" ,style="resize:none;height:100px;"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>   
    @Html.ActionLink("Back to List", "Index")
</div>
