@model IList<Modelclass.EF.Template>
@{
    ViewBag.Title = "Details Template";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Dannh sach template

}
<h2>Details</h2>

<div class="row">
    <div class="col-lg-12 col-md-12">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sach Template</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID </th>
                                <th>Title</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>ID </th>
                                <th>Title</th>
                                <th>Description</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/Admin/Template/Edit/@item.ID">Edit |</a>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Are you sure to delete this user",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.ID</td>
                                    <td>@item.Title</td>
                                    <td>@item.Descriptions</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>
