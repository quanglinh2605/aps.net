@section slide{

    <div class="banner">
        <div class="container-fluid">
            <script src="js/responsiveslides.min.js"></script>
            <script>
                $(function () {
                    $("#slider").responsiveSlides({
                        auto: true,
                        nav: true,
                        speed: 500,
                        namespace: "callbacks",
                        pager: true,
                    });
                });
            </script>
  
            <div id="carouselExampleIndicators" class="carousel slide col-12" style="width: 100%; text-align:center" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @foreach (var item in Model)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@item.ID"></li>
                    }

                </ol>
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Assets/Client/images/home.jpg" alt="First slide" height="650">
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="carousel-item">
                            <img src="@Url.Content(item.ImageCate)" alt="@item.Occasions" style="width: 100%" height="650">
                            <div class="carousel-caption d-none d-md-block" >
                                <a href="/Template/Index/@item.ID" style=" float: left; padding-bottom: 65px">
                                    <h1 style="color:darksalmon;  font-size: 50px ">@item.Occasions</h1>
                                    <h4 style="color:black;  font-size: 50px; float:left">@item.Descriptions</h4>
                                </a>
                            </div>
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
  

        </div>
    </div>
}
