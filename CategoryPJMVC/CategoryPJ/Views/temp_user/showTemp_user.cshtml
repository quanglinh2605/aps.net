@model CategoryPJ.Models.ModelsView.template_userView

@{
    ViewBag.Title = "showTemp_user";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CategoryPJ.Models.ModelsView.TemplateModelView temp = ViewBag.Temp as CategoryPJ.Models.ModelsView.TemplateModelView;
}

@section slide{
}
<div class="container-fluid" style="background-color:cornflowerblue;width:800px; font-size:2rem">
    <h2 style="text-align:center;margin-top:5px;color:red">@Model.Title</h2>
    <br />
    <div style="margin:auto">
        <img src="@Url.Content(temp.ImagePath)" width="600" height="400" style="margin-left:80px;" />
    </div>
    <br />
    <div style="margin-left:100px;font-size:15px;">
        @Model.Message
    </div>
    <br />
    @if (Model.PathMusic != null)
    {
        <div>
            <audio controls><source src="~/Content/customerMusic/@Model.PathMusic" /></audio>
        </div>
        <br />
    }
    @if (Model.PathPhoto != null)
    {
        <div>
            <img src="~/Content/customerPhoto/@Model.PathPhoto" width="350" height="250" style="display:block;margin-left:auto;margin-right:auto" />
        </div>
    }
</div>
<br />
<p style="margin-left:280px;">
    <a href="@Url.Action("sendCard","SendMail")" class="btn btn-success btn-group-sm" style="font-size:larger">Send this Card</a>
    <a href="@Url.Action("TempDetail","temp_user", new { id = Model.IDTemp,userId = Model.IDUser, model = Model })"style="font-size:larger" class="btn btn-default btn-group-sm">Edit</a>
</p>

