@model CategoryPJ.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grow">
    <div class="container">
        <h2>Register</h2>
    </div>
</div>
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}
<div class="container">
    <div class="register" style="font-size:70%;">
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="col-md-6 register-top-grid">
                <div class="form-group">
                    <span>Username</span>
                    <div>
                        @Html.TextBoxFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>Email</span>
                    <div>
                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>Phone</span>
                    <div>
                        @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6 register-bottom-grid">
                <div class="form-group">
                    <span>Password</span>
                    <div>
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>Password confirm</span>
                    <div>
                        @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                    <input type="submit" value="Resigster" class="btn btn-info btn-default" style="font-size: 2rem" />
                    
            </div>
        }

    </div>
</div>


<div style="font-size: 18px;margin-left:50px;">
    @Html.ActionLink("Back to List", "Index", "Home")
</div>