@model RestaurantManagement.Models.MenuModelView

@{
    ViewBag.Title = "editMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>editMenu</h2>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="ImgPath" value="@Model.ImgPath" />
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="ImgName" class="control-label">Choose Photo</label>

        <input type="file" value="" name="ImgName" />

    </div>
    <div class="form-group">
        <label for="Name" class="control-label">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="Price" class="control-label">Price</label>
        <input type="text" name="Price" class="form-control" value=@Model.Price />
    </div>
    <input type="submit" value="Save" name="btnSaveMenu" />
</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>