@model RestaurantManagement.Models.MenuModelView

@{
    ViewBag.Title = "createMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>createMenu</h2>
@if(ViewBag.Warn != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Warn
    </div>
}
<form method="post" enctype="multipart/form-data">
    <input type="hidden" value=@ViewBag.Res_Id name="Res_Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" value="" name="Name" />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" value="" name="Price" />
    </div>
    <div class="form-group">
        <label for="ImgName">Choose Photo</label>
        <input type="file" value="" name="ImgName" />
    </div>
    <input type="submit" value="Save" name="btnSaveMenu" />
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
