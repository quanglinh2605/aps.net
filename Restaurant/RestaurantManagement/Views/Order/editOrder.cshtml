@model RestaurantManagement.Models.OrderModelView

@{
    ViewBag.Title = "editOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<RestaurantManagement.Models.TableModelView> lstable = ViewBag.lstable as List<RestaurantManagement.Models.TableModelView>;
}

<h2>editOrder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>OrderModelView</h4>
        <hr />
        <input type="hidden" value="@Model.Id_Res" name="Id_Res" />
        <input type="hidden" value="@Model.Id_Customer" name="Id_Customer"/>
        <input type="hidden" value="Received" name="status" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.timeStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.timeStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.timeStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Menu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Menu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Menu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <select name="choosetable">
                @if (lstable != null)
                {
                    foreach (var item in lstable)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                }
            </select>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.numberSeat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numberSeat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numberSeat, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)

      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
