@model TransportManagerSystem.Models.ModelsViews.OwnerDetail
@{
    ViewBag.Title = "EditOwner";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditOwner</h2>
@using (Html.BeginForm())
{
<div class="container">
    <div class="form-group" style="width: 500px;">
        <label>FullName</label>
        @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control required" })
    </div>
    <div class="form-group" style="width: 500px;">
        <label>Address</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width: 500px;">
        <label>Birthday</label>
        @Html.TextBoxFor(x => x.Birthday, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width: 500px;">
        <label>Phone</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width: 500px;">
        <label>Identity Card</label>
        @Html.TextBoxFor(x => x.Id_Card, new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn btn-primary" style="margin-top:5px;border:none;border-radius:2px;" />
</div>
}


