@model TransportManagerSystem.Models.ModelsViews.Account
@{
    ViewBag.Title = "editAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<TransportManagerSystem.Models.ModelsViews.user> lsuser = ViewBag.lsuser as List<TransportManagerSystem.Models.ModelsViews.user>;
    List<TransportManagerSystem.Models.ModelsViews.Regional> lsregion = ViewBag.lsregion as List<TransportManagerSystem.Models.ModelsViews.Regional>;
}

<h2>editAccount</h2>
@using (Html.BeginForm())
{
    <div class="form-group" style="width:500px">
        <label>UserName</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width:500px">
        <label>PassWord</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width:500px">
        <label>FullName</label>
        @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control" })
    </div>
    <div class="form-group" style="width:500px">
        <label>Phone</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>
    <div>
        <label>User Type</label>
        <select name="usertype_id" id="">
            <option value="-1">Choose Usertype</option>
            @foreach (var item in lsuser)
            {
                if (Model.usertype_id == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <label>Regional</label>
        <select name="Regional_Id" id="">
            <option value="-1">Choose Region</option>
            @foreach (var item in lsregion)
            {
                if (Model.Regional_Id == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <label>Active</label>
        @if (Model.Status == true)
        {
            <input type="checkbox" checked id="chkActive" />
        }
        else
        {
            <input type="checkbox" id="chkActive" />
        }
        <input type="hidden" name="Status" id="chkActiveValue" value="" />
    </div>
    <div>
        <input type="submit" value="Save" name="btnSave" />
    </div>
    @section scripts{
        <script>
            $("#chkActive").change(function () {
                $("#chkActive").is(":checked") ? $("#chkActiveValue").val("True") : $("#chkActiveValue").val("False");
            })
        </script>
    }
}