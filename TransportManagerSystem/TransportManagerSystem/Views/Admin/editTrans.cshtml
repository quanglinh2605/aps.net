@model TransportManagerSystem.Models.ModelsViews.TransportPart
@{
    /**/

    ViewBag.Title = "editTrans";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<TransportManagerSystem.Models.ModelsViews.TransportType> ls = ViewBag.lstrans as List<TransportManagerSystem.Models.ModelsViews.TransportType>;   
}

<h2>editTrans</h2>
@using (Html.BeginForm())
{
    <div class="form-group" style="width: 500px;">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control"  } )
    </div>
    <div class="form-group" style="width: 500px;">
        <label>Transport Type</label>
        <select name="ID_Type" id="">
            <option value="-1">Choose Transport Type</option>
            @foreach (var item in ls)
            {
                if (item.Id == Model.ID_Type)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
        <div>
            <input type="submit" value="Save" name="btnSave" />
        </div>        
    </div>
}


