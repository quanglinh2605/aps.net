@model List<Models.EF.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var news = (Models.EF.News) ViewBag.news;
    var relatedNews = (List<Models.EF.News>)ViewBag.relatedNews;
}
<div class="container">
    <style type="text/css">
        input[type=radio].check {
            float: right;
        }

        input[type=radio].center {
            margin-bottom: -4px
        }

